doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Максим Хаскинс, преподаватель английского языка
    style.
      body {
        background-image: url('https://images.unsplash.com/photo-1503780099440-e6ab046a1d71?q=80&w=1883&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-family: 'Tahoma', Arial, sans-serif;
      }
      section {
        text-align: center;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: 300px;
      }
      h1 {
        color: #000;
        font-size: 24px;
        margin-bottom: 20px;
      }
      label {
        display: block;
        margin-top: 10px;
        font-weight: bold;
      }
      input {
        width: 80%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 10px;
        box-sizing: border-box;
      }
      button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-bottom: 10px;
      }
      a {
        text-decoration: none;
        color: #333;
        margin-top: 10px;
        display: inline-block;
      }
  body
    section
      h1 Максим Хаскинс, преподаватель английского языка
      form#locationForm(action="/redirect", method="post")
        label(for="countryInput") Введите вашу страну:
        input#countryInput(required="", name="countryInput", type="text")
        button(type="submit") Отправить:
      a(href="/index") По-английски
    script.
      document.getElementById("locationForm").addEventListener("submit", function(event) {
        event.preventDefault();
        var country = document.getElementById("countryInput").value.toLowerCase();
        console.log("Country:", country);
        redirectToPage(country);
      });
      function redirectToPage(country) {
        var redirectUrl;
        switch (country) {
          case "россия":
            redirectUrl = "/about_russian";
            break;
          case "англия":
          case "великобритания":
            redirectUrl = "/about";
            break;
          default:
            redirectUrl = "/about_russian";
        }
        console.log("Redirect URL:", redirectUrl);
        window.location.href = redirectUrl;
      }
