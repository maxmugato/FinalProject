    <script>
        // Function to handle login process and geolocation
        function handleLogin() {
            if ("geolocation" in navigator) {
                // Prompt user for geolocation
                navigator.geolocation.getCurrentPosition(function(position) {
                    // Upon successful geolocation, redirect to about.html
                    window.location.href = "about.html";
                }, function(error) {
                    // Handle error getting location
                    alert("Error getting location: " + error.message);
                });
            } else {
                // Geolocation not supported
                alert("Geolocation is not supported by your browser");
            }
        }

        // Attach event listener to loginButton
        document.getElementById("loginButton").addEventListener("click", function(event) {
            event.preventDefault(); // Prevent default form submission behavior
            handleLogin(); // Call function to handle login and geolocation
        });
    </script>
