    <section>
        <h1>Maxim Haskins - English Teacher</h1>
        <form id="locationForm">
            <label for="countryInput">Enter your country:</label>
            <input type="text" id="countryInput" name="countryInput" required>
            <button type="submit">Submit</button>
        </form>
        <a href="LoginpageRussian.html">По-русски</a>
    </section>

    <script>
        document.getElementById("locationForm").addEventListener("submit", function(event) {
            event.preventDefault();
            var country = document.getElementById("countryInput").value;
            console.log("Country:", country);
            redirectToPage(country);
        });

        function redirectToPage(country) {
            var redirectUrl;
            var normalizedCountry = normalizeCountryName(country);

            switch (normalizedCountry.toLowerCase()) {
                case "russia":
                case "россия":
                    redirectUrl = "/about_russian.html";
                    break;
                case "united kingdom":
                    redirectUrl = "/about.html";
                    break;
                case "england":
                    redirectUrl = "/about.html";
                    break;
                default:
                    redirectUrl = "/default_page.html";
                    break;
            }

            // Perform geolocation and redirect to the determined URL
            if ("geolocation" in navigator) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    console.log("Latitude:", position.coords.latitude);
                    console.log("Longitude:", position.coords.longitude);

                    // Redirect to the determined URL based on country and geolocation
                    window.location.href = redirectUrl;
                }, function(error) {
                    console.log("Error getting location:", error.message);
                    // Still redirect based on country even if geolocation fails
                    window.location.href = redirectUrl;
                });
            } else {
                // Geolocation not supported, simply redirect based on country
                window.location.href = redirectUrl;
            }
        }

        // Helper function to normalize country names
        function normalizeCountryName(country) {
            // Normalize Cyrillic characters to Latin equivalents
            // This function can be expanded to cover more characters
            var normalized = country.replace(/Россия/gi, "Russia");
            return normalized;
        }
    </script>
