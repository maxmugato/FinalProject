    <script>

// Check if the browser supports geolocation
if ("geolocation" in navigator) {
    // Get the user's language preference


# Reference for geolocation based on the broswer - https://www.w3schools.com/jsref/prop_nav_language.asp
    var userLanguage = navigator.language || navigator.userLanguage;

    // Check if the language preference contains "ru" (indicating Russian)
    if (userLanguage.toLowerCase().includes('ru')) {
        // Redirect to the Russian page
        window.location.href = "/about_russian.html";
    }
}

document.getElementById("loginButton").addEventListener("click", function(event) {
    event.preventDefault();
    // Simulate login process, then redirect based on language preference
    simulateLogin();
});

function simulateLogin() {
    // Simulate login process here

    // Get the user's language preference
    var userLanguage = navigator.language || navigator.userLanguage;

    // Check if the language preference contains "ru" (indicating Russian)
    if (userLanguage.toLowerCase().includes('ru')) {
        // Redirect to the Russian page
        window.location.href = "/about_russian.html";
    } else {
        // Redirect to the English page
        window.location.href = "about.html";
    }
}
        
    </script>
